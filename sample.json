{
  "people": {
    "db": "people",
    "item": {
      "get": {
        "data": {
          "name": "{{ this.name }}",
          "age": "{{ this.age }}",
          "bio": "{{ this.name }} likes {{ this.hobbies }}"
        },
        "types": {
          "name": "string",
          "age": "integer"
        },
        "query": {
          "op": "SELECT * FROM people WHERE id=%s",
	  "params": ["{{ uri.tag }}"]
	}
      }
    },
    "list": {
      "post": {
        "query": {
	   "op": "INSERT INTO people (name, age, hobbies) VALUES (%s, %s, %s)",
           "params": ["{{ url.name }}", "{{ url.age }}", "{{ url.hobbies  }}"]
        }
      }
    }
  }
}
