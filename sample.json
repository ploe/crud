{
  "name": "people",
  "desc": "A list of people their ages and their hobbies in MySQL",
  "driver": "mysql",

  "member": {
    "get": {
      "data": {
        "name": "{{ this.name }}",
        "age": "{{ this.age }}",
        "bio": "{{ this.name }} likes {{ this.hobbies }}"
      },
      "types": {
        "name": "string",
        "age": "integer"
      },
      "query": {
        "op": "SELECT * FROM people WHERE id=%s",
	  "params": ["{{ uri.member }}"]
      }
    }
  },

  "collection": {
    "get": {
      "data": {
        "id": "{{ this.id }}",
        "uri": "/people/{{ this.id }}"
      },
      "types": {
        "id": "integer"
      },
      "transforms": [
        { "op": "limit", "limit": "{{ url.limit }}" }
      ],
      "query": {
        "op": "SELECT id, name FROM people"
      }
    },

    "post": {
      "query": {
	 "op": "INSERT INTO people (name, age, hobbies) VALUES (%s, %s, %s)",
         "params": ["{{ url.name }}", "{{ url.age }}", "{{ url.hobbies  }}"]
      }
    }

  }

}
